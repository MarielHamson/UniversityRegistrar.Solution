@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h3>Add a new course:</h3>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.CourseNumber)
    @Html.TextBoxFor(model => model.CourseNumber, new {@class = "form-control"})
  </div>
  
  <input type="submit" value="Add new course" class="btn" />
}
<p>@Html.ActionLink("Back to courses list", "Index")</p>
