@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;

<h3>Find a course:</h3>
<hr />
@using (Html.BeginForm("Index", "Courses", FormMethod.Get))
{
  <p>@Html.TextBox("searchCourse")</p>
  <button class="btn" type="submit">Search</button>
}

<h3>Courses list:</h3>
<hr />
@if (@Model.Count == 0)
{
  <p>No courses have been found!</p>
} 

@foreach (Course course in Model)
{
  <p>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new course", "Create")</p> 